# .env.example

# -------------------------------
# 数据库配置 (MySQL 版本)
# -------------------------------
DB_DRIVER=mysql
# MySQL 连接字符串格式:
#   user:password@tcp(host:port)/dbname?charset=utf8mb4&parseTime=True&loc=Local
DB_DSN=root:land1725@tcp(127.0.0.1:3306)/blogdb?charset=utf8mb4&parseTime=True&loc=Local

# -------------------------------
# JWT 认证配置
# -------------------------------
# 请使用至少32位随机字符串作为密钥
# 生成方式: openssl rand -base64 32
JWT_SECRET=UzDg%EbOuh&~jtGTqSC$FjbAg0v9V0tX

# -------------------------------
# 服务器配置
# -------------------------------
# 服务器监听端口
SERVER_PORT=8080

# -------------------------------
# 可选高级配置
# -------------------------------
# 数据库连接池最大打开连接数
DB_MAX_OPEN_CONNS=25
# 数据库连接池最大空闲连接数
DB_MAX_IDLE_CONNS=5
# 数据库连接最大存活时间(分钟)
DB_CONN_MAX_LIFETIME=30

